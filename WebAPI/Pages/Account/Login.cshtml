@page
@model WebAPI.Pages.Admin.LoginModel
@{
}

<head>

</head>

<div class="text-center">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Credential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.Credential.Username" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Credential.Username"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="@Model.Credential.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Credential.Password"></span>
        </div>
        <div class="row form-check" mb-2>
            <div class="col-2">
                <input type="checkbox" asp-for="@Model.Credential.RememberMe" class="form-check-inline"/>
                <label class="form-check-label" asp-for="@Model.Credential.RememberMe"></label>
            </div>
            <div class="col">

            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col">

            </div>
        </div>
    </form>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        //getItems();
    </script>

</div>